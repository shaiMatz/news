modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "NewsGeo Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "React Native Client"

[[workflows.workflow]]
name = "NewsGeo Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node start-server.js"
waitForPort = 5000

[[workflows.workflow]]
name = "React Native Client"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node rn-web-client-fixed.js"
waitForPort = 5002

[deployment]
run = ["sh", "-c", "node start-server.js"]

[[ports]]
localPort = 3000
externalPort = 3000

